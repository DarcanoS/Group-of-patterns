# Air Quality Platform - Database Containers Example Configuration
# Copy this file to .env.containers and customize with your values

# ==========================================================================
# PostgreSQL + PostGIS Configuration
# ==========================================================================

POSTGRES_PASSWORD=your_postgres_password
POSTGRES_PORT=5433
DB_NAME=air_quality_db

# ==========================================================================
# MongoDB Configuration
# ==========================================================================

MONGO_ROOT_USER=root
MONGO_ROOT_PASSWORD=your_mongo_password
MONGO_PORT=27017

# ==========================================================================
# Application Database Users (created by init scripts)
# ==========================================================================

DB_ADMIN_USER=air_quality_admin
DB_ADMIN_PASSWORD=your_admin_password
DB_APP_USER=air_quality_app
DB_APP_PASSWORD=your_app_password
MONGO_APP_USER=air_quality_user
MONGO_APP_PASSWORD=your_mongo_app_password

# ==========================================================================
# Connection Strings (for application configuration)
# ==========================================================================

DATABASE_URL_ADMIN=postgresql://air_quality_admin:your_admin_password@localhost:5433/air_quality_db
DATABASE_URL=postgresql://air_quality_app:your_app_password@localhost:5433/air_quality_db
NOSQL_URI=mongodb://air_quality_user:your_mongo_app_password@localhost:27017/
NOSQL_DB_NAME=air_quality_config

# ==========================================================================
# Container Configuration
# ==========================================================================

POSTGRES_CONTAINER_NAME=air_quality_postgres
MONGO_CONTAINER_NAME=air_quality_mongo
NETWORK_NAME=air_quality_network
