# API Configuration
API_V1_STR=/api
PROJECT_NAME=Air Quality Platform API
VERSION=1.0.0

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8080"]

# Database (PostgreSQL + PostGIS)
DATABASE_URL=postgresql://postgres:password@localhost:5432/airquality_db

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# NoSQL (Future - MongoDB/Redis for settings)
# NOSQL_URI=mongodb://localhost:27017
# NOSQL_DB_NAME=airquality_nosql

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Application Settings
FIRST_SUPERUSER_EMAIL=admin@airquality.com
FIRST_SUPERUSER_PASSWORD=admin123

