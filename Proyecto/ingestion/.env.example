# Air Quality Platform - Ingestion Service Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================================================
# Database Configuration (PostgreSQL + PostGIS)
# ============================================================================
DATABASE_URL=postgresql://air_quality_app:CHANGE_THIS_PASSWORD@localhost:5432/air_quality_db

# Or use individual components:
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=air_quality_db
# DB_USER=air_quality_app
# DB_PASSWORD=CHANGE_THIS_PASSWORD

# ============================================================================
# External API Providers
# ============================================================================

# AQICN / WAQI JSON API
# Get your token from: https://aqicn.org/data-platform/token/
# Pydantic expects: TOKEN_API_AQICN (this is the alias for aqicn_api_key)
TOKEN_API_AQICN=demo

# AQICN Base URL
AQICN_BASE_URL=https://api.waqi.info

# Comma-separated list of cities to query (alias for aqicn_cities)
AQICN_CITIES=bogota

# ============================================================================
# Ingestion Behavior
# ============================================================================

# Historical data ingestion
HISTORICAL_DATA_PATH=../data_air
STATION_MAPPING_PATH=data/station_mapping.yaml

# Real-time ingestion settings
INGESTION_INTERVAL_MINUTES=10
INGESTION_DEFAULT_CITIES=Bogot√°
INGESTION_TIME_WINDOW_MINUTES=60

# ============================================================================
# Logging
# ============================================================================
INGESTION_LOG_LEVEL=INFO
LOG_FORMAT=colorlog

# ============================================================================
# Operational Modes
# ============================================================================
# Options: historical, realtime, both
INGESTION_MODE=historical

# If true, allows re-running historical ingestion (will skip duplicates)
ALLOW_REINGESTION=true
